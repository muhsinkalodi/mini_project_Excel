        <input
          class="px-3 py-2 outline-none bg-transparent border-2 border-zinc-800"
          type="text"
          placeholder="Email"
          type="email"
          placeholder="Email"
          name="email"
        />

        <input
          class="px-3 py-2 outline-none bg-transparent border-2 border-zinc-800"
          type="text"
          placeholder="password"
          type="password"
          placeholder="password"
          name="password"
        />
        <input
          class="px-3 py-2 rounded-md bg-blue-500"
          type="submit"
          value="Login to Post"
        />
      </form>
    </div>
  </body>
