<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-500 rounded-md px-2 py-2 text-sm mb-5 initial-block"
          href="/logout"
          >Logout</a
        >
      </div>
      <h3 class="text-3xl mb-5 text-3xl sm:text-4xl lg:text-5xl mb-5">
        <span class="font-light">Hello Dear</span>, <%= user.name %>
      </h3>
      <h5 class="mb-5">you can Create a post</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="What's on your mind ?"
          class="w-1/3 p-3 bg-zinc-900 resize-none bg-trasparent border-2 outline-none border-zinc-800 rounded-md w-full sm:w-1/2 lg:w-1/3 ..."
          name="content"
        ></textarea>
        <input
          class="px-3 w-40 py-2 bg-blue-500 block rounded-md mt-2 w-full sm:w-40 lg:w-40 ..."
          type="submit"
          value="Create New Post"
        />
      </form>

      <div class="posts mt-20">
        <h3 class="text-zinc-400 mb-4">Your posts</h3>
        <div class="postcontainer">
          <% user.posts.reverse().forEach(function(post) { %>
          <div
            class="post post w-full sm:w-1/2 lg:w-1/3 p-5 mb-4 border-2 border-zinc-800 rounded-md border-zinc-800"
          >
            <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-2 inline-block"
              ><%= post.likes.length %> likes</small
            >
            <div class="btns flex gap-4 mt-1">
              <a class="text-blue-500" href="/like/<%= post._id %>">
                <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
              </a>
              <a class="text-zinc-600" href="/edit/<%= post._id %>">edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
